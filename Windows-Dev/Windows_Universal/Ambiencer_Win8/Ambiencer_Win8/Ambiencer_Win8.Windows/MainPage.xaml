<Page
    x:Class="Ambiencer_Win8.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ambiencer_Win8"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" RequestedTheme="Light">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="768" VerticalAlignment="Top" Width="284" Background="#FFD2D2D2" Foreground="{x:Null}">
            <Button x:Name="MenuButton" Content="" VerticalAlignment="Stretch" Height="35" Width="273" IsHoldingEnabled="False" IsDoubleTapEnabled="False" IsRightTapEnabled="False" BorderBrush="{x:Null}" FontSize="14.667" HorizontalAlignment="Stretch" Foreground="{x:Null}" IsTapEnabled="False">
                <Button.Background>
                    <ImageBrush Stretch="Uniform" ImageSource="Assets/Icons/ThreeLinesIcon.png" AlignmentX="Left">
                        <ImageBrush.RelativeTransform>
                            <CompositeTransform/>
                        </ImageBrush.RelativeTransform>
                    </ImageBrush>
                </Button.Background>
            </Button>
        </ListView>

    </Grid>
</Page>
